<section class="parallax-bg2 parallax colored clearfix marginUp padded4">
	<div class="content dark padded container">
		
		<div class="title grid-full">
			<h2>Add/edit your release content here</h2>
			<span class="border"></span>
		</div>

		<div class="formWrapper">
			<% if @contact.errors.any? %>
				<div class="message warning">
					<% @contact.errors.full_messages.each do |msg| %>
			   			<%= msg %><br/>
					<% end %>
				</div>
			<% end %>	
			<%= form_for(@contact) do |f| %>
				<%= f.label :message_text, class: "formText" %><br/>
				<%= f.text_field :message_text, class: "email text-area" %><br /><br />
				<%= f.label :thanks_text, class: "formText" %><br/>
				<%= f.text_field :thanks_text, class: "email text-area" %><br /><br />
				<%= f.label :email, class: 'formText' %><br/>
	    		<%= f.text_field :email, class: 'email text-area'  %><br /><br />
				<%= f.label :name, class: 'formText' %><br/>
	    		<%= f.text_field :name, class: 'email text-area'  %><br /><br />
				<%= f.label :message, class: 'formText' %><br/>
	    		<%= f.text_area :user_message, class: 'email text-areaArea'  %><br /><br />
	    		<%= f.submit "Send message" %>
			<% end %>
		</div>
</section>
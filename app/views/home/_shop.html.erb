						<input type="hidden" name="on0" value="Moon Ate The Dark I & II (CD)"><h4>Moon Ate The Dark I & II (CD)</h4>
						<h5><em>*limited to 1 item per customer <br/>(orders exceeding 1 of each item will be cancelled)</em</h5><br/><br/>
						<select name="os0">
							<option value="UK (inc. postage)">UK (inc. postage) £18.00 GBP</option>
							<option value="Europe (inc. postage)">Europe (inc. postage) £20.00 GBP</option>
						</select>
						<br/><br/>
						<input type="hidden" name="currency_code" value="GBP">
						<input type="image" src="https://www.paypalobjects.com/en_US/GB/i/btn/btn_buynowCC_LG.gif" border="0" name="submit" alt="PayPal – The safer, easier way to pay online.">
						<img alt="" border="0" src="https://www.paypalobjects.com/en_GB/i/scr/pixel.gif" width="1" height="1">
						</form>
					<% elsif p.title == "Moon Ate The Dark II" && p.format == "CD" %>
						<form action="https://www.paypal.com/cgi-bin/webscr" method="post" target="_top">
						<input type="hidden" name="cmd" value="_s-xclick">
						<input type="hidden" name="hosted_button_id" value="LSWE2B4XJNYQ4">
						<input type="hidden" name="on0" value="Moon Ate The Dark II (CD)"><h4>Moon Ate The Dark II (CD)</h4>

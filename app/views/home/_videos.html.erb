<!-- Begin Videos -->
<% if @products.count > 0 %>
	<section id="section4" class="parallax-bg2 parallax colored clearfix">
<% else %>
	<section id="section3" class="parallax-bg2 parallax colored clearfix">
<% end %>
	<div class="content dark padded container">

		<!-- Text -->
		<div class="title grid-full">
			<h2>Videos</h2>
			<span class="border"></span>
		</div>
		
		<% @videos.each do |v| %>
			<div class="shortcode grid-full videos">
				<h3 class="shortcode-title contentTitle"><%= v.title %></h3>
				<div class="video">
            		<%= v.url_html %>
				</div>
			</div>
		<% end %>
	</div>
</section>
<!-- End Videos -->
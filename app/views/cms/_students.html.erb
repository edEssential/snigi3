<div class="cmsWrapper">
	<div class="releases">
		<div class="divHeader">Students</div>
		<div class="tableWrapper">
			<div class="tableContent">
				<% if @students.count > 0 %>
					<table width="100%">
						<tr class="tableHeader">
							<th>NAME</th>
							<th>GENDER</th>
							<th>RESTING HR</th>
							<th>AFTER HAPPY</th>
							<th>RESTING HR2</th>
							<th>AFTER SAD</th>
						</tr>
						<tr><hr class="ruler"/></tr>
						<% @students.each do |s| %>
							<tr class="tableRow">
								<td width="12%"><%= s.name %></td>
								<td width="12%"><%= s.gender %></td>
								<td width="18%"><%= s.resting_hr_1 %></td>
								<td width="17%"><%= s.after_happy_hr %></td>
								<td width="18%"><%= s.resting_hr_2 %></td>
								<td width="17%"><%= s.after_sad_hr %></td>
								<!--<td width="3%">
									<input type="hidden" value="shows" class="modal-model-type">
									<input type="hidden" value=<%= s.id %> class="modal-object-id">
									<%#= link_to image_tag('edit2.png'), '#myModal',  :data => {:toggle => "modal"}, class: "cmsEdit" %>
								</td>-->
								<td width="3%"><%= link_to image_tag('edit2.png'), edit_student_path(s) %></td>
								<td width="3%"><%= link_to image_tag('delete2.png'), s, :confirm => 'Are you sure you want to delete this student?', :method => :delete %></td>
							</tr>
						<% end %>
					</table>
				<% else %>
					<table width="100%"><tr class="tableRow empty"><td><em>YOU HAVE NO STUDENTS YET... ADD SOME BELOW ?!</em></td></tr></table>
				<% end %>
			</div>
		</div>
	</div>
	<h6><%= link_to 'Add new student', new_student_path, :class => "darkButton2" %></h6>
	<h6><%= link_to 'View data', students_path, :class => "darkButton2" %></h6>
</div>
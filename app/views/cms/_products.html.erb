<div class="cmsWrapper">
	<div class="releases">
		<div class="divHeader">Products</div>
		<div class="tableWrapper">
			<div class="tableContent">
				<% if @products.count > 0 %>
					<table width="100%">
						<tr class="tableHeader">
							<th>ARTIST</th>
							<th>TITLE</th>
							<th>FORMAT</th>
							<th>PRICE</th>
						</tr>
						<tr><hr class="ruler"/></tr>
						<% @products.each do |p| %>
							<tr class="tableRow">
								<td width="24%"><%= p.artist %></td>
								<td width="24%"><%= p.title %></td>
								<td width="23%"><%= p.format %></td>
								<td width="23%">Â£<%= p.price %></td>
								<td width="3%"><%= link_to image_tag('edit2.png'), edit_product_path(p) %></td>
								<td width="3%"><%= link_to image_tag('delete2.png'), p, :confirm => 'Are you sure you want to delete this release?', :method => :delete %></td>
							</tr>
						<% end %>
					</table>
				<% else %>
					<table width="100%"><tr class="tableRow empty"><td><em>YOU HAVE NO PRODUCTS LISTED IN THE SHOP... ADD SOME BELOW ?!</em></td></tr></table>
				<% end %>
			</div>
			<div id="person-form" title="Person" style="display:none"></div>
		</div>
	</div>
	<h6><%= link_to 'Add new product', new_product_path, :class => "darkButton2" %></h6>
</div>
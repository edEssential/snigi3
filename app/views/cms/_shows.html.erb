<div class="cmsWrapper">
	<div class="releases">
		<div class="divHeader">Shows</div>
		<div class="tableWrapper">
			<div class="tableContent">
				<% if @shows.count > 0 %>
					<table width="100%">
						<tr class="tableHeader">
							<th>ARTIST</th>
							<th>VENUE</th>
							<th>LOCATION</th>
							<th>DATE</th>
						</tr>
						<tr><hr class="ruler"/></tr>
						<% @shows.each do |s| %>
							<tr class="tableRow">
								<td width="20%"><%= s.artist %></td>
								<td width="27%"><%= s.venue %></td>
								<td width="27%"><%= s.location %></td>
								<td width="20%"><%= s.date %></td>
								<!--<td width="3%">
									<input type="hidden" value="shows" class="modal-model-type">
									<input type="hidden" value=<%= s.id %> class="modal-object-id">
									<%#= link_to image_tag('edit2.png'), '#myModal',  :data => {:toggle => "modal"}, class: "cmsEdit" %>
								</td>-->
								<td width="3%"><%= link_to image_tag('edit2.png'), edit_show_path(s) %></td>
								<td width="3%"><%= link_to image_tag('delete2.png'), s, :confirm => 'Are you sure you want to delete this show?', :method => :delete %></td>
							</tr>
						<% end %>
					</table>
				<% else %>
					<table width="100%"><tr class="tableRow empty"><td><em>YOU HAVE NO SHOWS YET... ADD SOME BELOW ?!</em></td></tr></table>
				<% end %>
			</div>
		</div>
	</div>
	<h6><%= link_to 'Add new show', new_show_path, :class => "darkButton2" %></h6>
</div>